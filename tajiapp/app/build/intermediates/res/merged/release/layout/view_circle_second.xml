<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEBF2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <com.zhangqing.taji.view.ObservableScrollView
        android:id="@+id/circle_second_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.zhangqing.taji.view.NoScrollListView
                android:id="@+id/circle_second_listview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E1DEE6"
                android:text="  " />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="你可能感兴趣的小组"
                android:textColor="#B0B0B0"
                android:textSize="20sp" />

            <com.zhangqing.taji.view.NoScrollListView
                android:id="@+id/circle_second_listview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.zhangqing.taji.view.ObservableScrollView>

</LinearLayout>